<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kds_ink_color_default_200"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/grinder_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kds_size_2"
            android:layout_marginBottom="@dimen/kds_space_8"
            android:background="@color/kds_ink_color_default_400"
            app:layout_constraintBottom_toTopOf="@id/btn_grinder_top_action"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginBottom="@dimen/kds_size_1" />

        <Button
            android:id="@+id/btn_grinder_top_action"
            style="@style/Kds.Button.Favorable.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/kds_space_16"
            android:layout_marginTop="@dimen/kds_space_8"
            android:layout_marginBottom="@dimen/kds_space_4"
            android:text="Submit"
            app:layout_constraintBottom_toTopOf="@id/btn_grinder_bottom_action"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/grinder_bottom_view"
            app:layout_goneMarginBottom="@dimen/kds_size_16"
            app:layout_goneMarginTop="@dimen/kds_size_16" />

        <Button
            android:id="@+id/btn_grinder_bottom_action"
            style="@style/Kds.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/kds_space_16"
            android:layout_marginTop="@dimen/kds_space_8"
            android:layout_marginBottom="@dimen/kds_space_16"
            android:text="Cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_grinder_top_action"
            app:layout_goneMarginTop="@dimen/kds_space_16" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
