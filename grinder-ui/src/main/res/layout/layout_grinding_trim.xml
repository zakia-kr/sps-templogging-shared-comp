<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.util.Calendar" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/kds_ink_color_default_200"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <include
            android:id="@+id/grinding_trim_progress_bar"
            layout="@layout/layout_grinder_progress_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:progressMax="@{1}"
            bind:progressStep="@{1}" />

        <View
            android:id="@+id/divider_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kds_size_1"
            android:background="@color/kds_ink_color_default_300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/grinding_trim_progress_bar" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_grinding_trim_clean"
            style="@style/Kds.TextView.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/kds_space_16"
            android:layout_marginVertical="@dimen/kds_space_16"
            android:text="Is the Grinder Machine Clean?"
            android:textColor="@color/kds_ink_color_default_900"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_one" />

        <RadioGroup
            android:id="@+id/rg_grinding_trim_clean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/kds_space_16"
            android:layout_marginVertical="@dimen/kds_space_8"
            android:orientation="horizontal"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/tv_grinding_trim_clean"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_grinding_trim_clean">

            <RadioButton
                android:id="@+id/rb_grinding_trim_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />

            <RadioButton
                android:id="@+id/rb_grinding_trim_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kds_space_32"
                android:text="Yes" />

        </RadioGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_grinding_trim_date"
            style="@style/Kds.TextView.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/kds_space_16"
            android:layout_marginTop="@dimen/kds_space_24"
            android:text="Sell by Date"
            android:textColor="@color/kds_ink_color_default_900"
            app:layout_constraintBottom_toTopOf="@id/dp_grinding_trim_sell_by_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rg_grinding_trim_clean" />

        <com.kroger.design.components.input.KdsDatePicker
            android:id="@+id/dp_grinding_trim_sell_by_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/kds_space_16"
            app:currentDate="@{Calendar.getInstance()}"
            app:isTransparent="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_grinding_trim_date"
            app:titleVisibility="false" />

        <Button
            android:id="@+id/btn_next"
            style="@style/Kds.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/kds_space_16"
            android:layout_marginBottom="@dimen/kds_space_16"
            android:elevation="@dimen/kds_space_4"
            android:text="@string/label_next_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>